{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Compiler projet",
      "command": "C:\\msys64\\mingw64\\bin\\gcc.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "main.c",
        "..\\includes\\*.c",
        "-o",
        "${workspaceFolder}\\main.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "cppbuild",
      "label": "Compiler tests",
      "command": "C:\\msys64\\mingw64\\bin\\gcc.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "TestUsers.c",
        "..\\unity\\*.c",
        "..\\includes\\*.c",
        "-o",
        "${workspaceFolder}\\test_user.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
